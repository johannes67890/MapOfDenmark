<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
   <children>
      <StackPane VBox.vgrow="ALWAYS">
         <children>
            <BorderPane fx:id="mainBorderPane">
               <top>
                  <HBox fx:id="mainUIHBox" stylesheets="@style.css">
                        <ToggleButton fx:id="menuButton1" mnemonicParsing="false" styleClass="button">
                           <graphic>
                              <ImageView fitHeight="26.0" fitWidth="26.0" preserveRatio="true">
                                 <image>
                                    <Image url="@../visuals/hamburber.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </ToggleButton>
                        <ComboBox fx:id="searchBarStart" editable="true" styleClass="combo-box" />
                        <Button fx:id="swapButton" mnemonicParsing="false">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../visuals/Icon.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <ComboBox fx:id="searchBarDestination" editable="true" styleClass="combo-box" />
                        <Button fx:id="routeButton" minWidth="29.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="29.0">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../visuals/routeIcon.png" />
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="pointButton" minWidth="29.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="29.0">
                           <graphic>
                              <ImageView fx:id="pointImage" fitHeight="20.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../visuals/pointofinterestpassive.png" />
                                 </image>
                              </ImageView>
                           </graphic></Button>
                        <Button fx:id="searchButton1" layoutX="752.0" layoutY="20.0" minWidth="55.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="51.0" text="Search" />
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </top>
            </BorderPane>
            <Pane fx:id="routeTypeMenu" styleClass="routeContainer" translateY="25.0" translateX="5" StackPane.alignment="CENTER_LEFT">
               <VBox styleClass="routeGroup" alignment="CENTER" spacing="10">
                  <Button fx:id="findRouteButton" styleClass="button" alignment="CENTER" mnemonicParsing="false" text="Find Route" />
                  <HBox spacing="10.0">
                     <Button fx:id="shortButton" styleClass="button" mnemonicParsing="false" text="Shortest" />
                     <Button fx:id="fastButton" styleClass="button" mnemonicParsing="false" text="Fastest" />
                  </HBox>
                  <HBox alignment="BASELINE_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="walkButton" mnemonicParsing="false" styleClass="button" >
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../visuals/Walking.png" />
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="bicycleButton"  styleClass="button" mnemonicParsing="false">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../visuals/Bicycle.png" />
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="carButton" styleClass="button" mnemonicParsing="false">
                           <graphic>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@../visuals/carIcon.png" />
                              </ImageView>
                           </graphic>
                        </Button>

                        <!-- <Text fx:id="distanceText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="texxt" /> -->
                        <!-- <Text fx:id="speedText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="texxt" /> -->
                     </children>
                  </HBox>
                  <ListView fx:id="routeListView" styleClass="list-cell" />
               </VBox>
            </Pane>
            <Pane fx:id="leftBurgerMenu" translateY="55.0" visible="false" StackPane.alignment="CENTER_LEFT">
                  <VBox fx:id="mainMenuVBox" styleClass="burgermenu" visible="false">
                     <Label text="Press the button below to generate a new map using a new file" wrapText="true" />
                     <Button fx:id="mainMenuButton" mnemonicParsing="false" text="Upload new file" />
                     <ChoiceBox fx:id="styleChoiceBox" prefWidth="150.0" translateX="5.0" translateY="50.0" />
                  </VBox>
            </Pane>
             <VBox maxHeight="30.0" maxWidth="0.0" StackPane.alignment="BOTTOM_RIGHT">
               <children>
                  <Label fx:id="zoomLevelText" alignment="CENTER" maxWidth="2000000.0" text="100m" VBox.vgrow="ALWAYS" />
                  <ImageView fx:id="zoomLevelImage" fitHeight="20.0" fitWidth="70.0" pickOnBounds="true" VBox.vgrow="ALWAYS">
                     <image>
                        <Image url="@../visuals/UnitRuler2.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</VBox>
